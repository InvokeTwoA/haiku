!!! 5
%html
  %head
    %title
      = full_title(yield(:title))
    = render partial: 'layouts/meta_tags'
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
    %link{ rel: "alternate", media: "handheld", href: root_url }
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = yield :head
  %body
    .navbar.navbar-default
      .navbar-header
        %button.navbar-toggle{"data-target" => ".navbar-responsive-collapse", "data-toggle" => "collapse", :type => "button"}
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.navbar-brand{:href => root_path} かっぱ俳句
      .navbar-collapse.collapse.navbar-responsive-collapse
        %ul.nav.navbar-nav
          %li= link_to 'カッパ順', goods_path
          %li= link_to 'コメント順', popular_words_path
          %li= link_to 'ランダム', "/haiku/#{SecureRandom.urlsafe_base64(6)}"
          %li= link_to 'ランダム沢山', rnd_words_path
          %li= link_to '短歌', "/tanka/#{SecureRandom.urlsafe_base64(6)}"
          %li= link_to '画像を追加', new_word_path
          %li= link_to 'かっぱアンテナ', antena_statics_path
    .container
      /.row
      /  /.span5
      /  /  = render 'commons/sidebar'
      /  /.span7
      - if notice
        .alert.alert-info
          = notice
      = yield
    .footer_add
      = render "/commons/google_analytics"
      :javascript
        var nend_params = {"media":27178,"site":152443,"spot":411511,"type":1,"oriented":1};
      %script{ type: "text/javascript", src: "http://js1.nend.net/js/nendAdLoader.js" }
      <!-- admax -->
      .ad{style: "text-align: right"}
        %script{ src: "http://adm.shinobi.jp/s/3db100ab00a0ce7765922b2320f841fd" }
      <!-- admax -->
    .copyright{ style: 'text-align: center' }
      Copyright &copy; 2013 かっぱ All Rights Reserved.
