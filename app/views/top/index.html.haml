= content_for :head do
  = stylesheet_link_tag    "words", media: "all", "data-turbolinks-track" => true
  = javascript_include_tag 'words'
= link_to 'ランダム俳句を見る', "/haiku/#{SecureRandom.urlsafe_base64(6)}", class: 'btn btn-info'

%h1 最近カッパされた俳句
- word1 = Word.find @good.word1
- word2 = Word.find @good.word2
- word3 = Word.find @good.word3
= render partial: "/words/haiku", locals: {word1: word1, word2: word2, word3: word3}
.main
  %table.table.table-striped.table-hover
    %tr
      %td.center
        = image_tag word1.avatar.url(:medium)
    %tr
      %td.center
        = image_tag word2.avatar.url(:medium)
    %tr
      %td.center
        = image_tag word3.avatar.url(:medium)
%br
= render partial: "/words/good", locals: {id_list: [word1.id, word2.id, word3.id]}
%br
= link_to '詳細をみる', word_path("#{word1.id}-#{word2.id}-#{word3.id}")

%h1 最近のコメント

- if @comments.present?
  %table.table.table-striped.table-hover
    %tr
      %th 俳句
      %th 名前
      %th コメント
    - @comments.each do |comment|
      %tr
        %td
          = link_to comment.haiku_set.word_text, word_path(comment.haiku_set.word_ids)
        %td= comment.name
        %td= comment.body
- else
  コメントなど存在しない

%h1 最近追加された画像

= image_tag @word.avatar.url(:medium)
